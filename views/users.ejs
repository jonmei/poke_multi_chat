<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/dist/chat.min.css">
</head>

<body>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="chat-user-info">
                <div class="block-header">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Jūsų informacija :
                </div>
                Slapyvardis : <%=user.local.name%> <br>
                El.paštas : <%=user.local.email%> <br>
                <a href="/logout">
                    Atsijungti
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                </a>
            </div>
            <div class="chat-user-wrapper">
                <div class="block-header">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    Prisijungę nariai :
                </div>
                <div id="chat-user-list"></div>
            </div>
        </div>
        <div class="col-md-10">
            <div id="room">
                <label class="col-xs-12 col-sm-3">
                    <input id="first" type="radio" value="0" name="room" checked>
                    <div class="chat-select-room"></div>
                </label>
                <label class="col-xs-12 col-sm-3">
                    <input id="second" type="radio" value="1" name="room">
                    <div class="chat-select-room"></div>
                </label>
                <label class="col-xs-12 col-sm-3">
                    <input id="third" type="radio" value="2" name="room">
                    <div class="chat-select-room"></div>
                </label>
                <label class="col-xs-12 col-sm-3">
                    <input id="fourth" type="radio" value="3" name="room">
                    <div class="chat-select-room"></div>
                </label>
                <div id="messages" class="col-xs-12"></div>
                <form class="send" action="/chat">
                    <div class="input-group">
                        <span id="location" class="input-group-addon btn btn-default" title="Bendrinti savo lokaciją">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </span>
                        <input id="m" autocomplete="off" maxlength="255" type="text" class="form-control" placeholder="Rašykite čia..">
                        <span id="send" class="input-group-addon btn btn-success chat-send" title="Siųsti žinutę">Siųsti</span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="../socket.io/socket.io.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bluebird/3.3.5/bluebird.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/locale/lt.js"></script>
<script src="dist/chat.min.js"></script>
</body>
</html>